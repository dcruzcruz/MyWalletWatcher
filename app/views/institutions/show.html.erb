<!-- Add this script to load Google Maps API -->
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDfkpN_ptGyFIcV05dzlTiIy5oEC1ayadk&callback=initMap" async defer></script>

<!-- app/views/institutions/show.html.erb -->

<h1><%= @institution.name %></h1>

<div id="map" style="height: 400px;"></div>

<!-- Corrected link to Google Maps -->
<a target="_blank" href="https://www.google.com/maps/@<%= @institution.latitude %>,<%= @institution.longitude %>,14z">View on Google Maps</a>

<script>
  function initMap() {
    const latitude = <%= @institution.latitude %>;
    const longitude = <%= @institution.longitude %>;

    const map = new google.maps.Map(document.getElementById("map"), {
      center: { lat: latitude, lng: longitude },
      zoom: 15,
    });

    const marker = new google.maps.Marker({
      position: { lat: latitude, lng: longitude },
      map: map,
      title: "<%= @institution.name %>",
    });
  }
</script>

