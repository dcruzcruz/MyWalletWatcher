<div>
  <h1>Household Members</h1>
  <%= link_to 'New Household Member', new_household_member_path, class: 'btn btn-dark' %>
</div>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @household_members.each do |member| %>
      <tr>
        <td><%= member.name %></td>
        <td>
          <%= link_to 'Show', household_member_path(member), class: 'btn btn-info' %>
          <%= link_to 'Edit', edit_household_member_path(member), class: 'btn btn-warning' %>
          <%= link_to 'Destroy', household_member_path(member),
          class: 'btn btn-danger',
          method: :delete,
          data: {
            turbo_method: :delete,
            turbo_confirm: "Are you sure? It will also delete associated accounts, and when you delete an account, it will also delete associated transactions"
            } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>