  <div class="container mt-4">
    <main class="container mt-4">
      <div class="row row-cols-1 row-cols-md-3 g-4">
        <div class="col">
          <div class="card h-100">
            <%= link_to(household_members_path) do %>
              <%= image_tag("household_members.jpg", alt: "Household", class: "card-img-top") %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">Household Member Integration</h5>
              <p class="card-text">Collaborative financial planning by linking accounts and transactions to specific household members.</p>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card h-100">
            <%= link_to("/accounts") do %>
              <%= image_tag("/assets/accounts-38d955664d6aea63088429c40b4a7faa624637db09f3d12b1578a1a27a06d0e9.jpg", alt: "Accounts", class: "card-img-top") %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">Accounts Management</h5>
              <p class="card-text">Create and manage multiple financial accounts, keeping your assets and liabilities organized.</p>
            </div>
          </div>
        </div>
        <div class="col">
          <div class="card h-100">
            <%= link_to(transactions_path) do %>
              <%= image_tag('transactions.jpg', alt: "Transactions", class: "card-img-top") %>
            <% end %>
            <div class="card-body">
              <h5 class="card-title">Transaction Tracking</h5>
              <p class="card-text">Record detailed transactions, including date, amount, type, and description.</p>
            </div>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
